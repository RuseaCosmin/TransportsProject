@model IEnumerable<ProiectDRXTransports.Models.DriverModel>

@{
    ViewData["Title"] = "Index";
}

<h1 style="text-align:center">Driver Management Page</h1>

            @if (@TempData["DeleteError"] != null)
{
    <p class="text-danger">@TempData["DeleteError"]</p>
}
<div class="page">
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNr)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
                <tr>
            <td colspan="5">
                @using (Html.BeginForm("Create","Drivers", FormMethod.Get))
{
    <input type="submit" value="Create New Driver" class="btn-c" />
}
            </td>
        </tr>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNr)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>