@model ProiectDRXTransports.Models.TransportationModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style media="screen">
      *,
*:before,
*:after{
    padding: 0;
    margin: 0;
    box-sizing: border-box;
}
body{
    background-color: #080710;
}
.background{
    width: 430px;
    height: 620px;
    position: absolute;
    transform: translate(-50%,-50%);
    left: 50%;
    top: 50%;
}
.background .shape{
    height: 200px;
    width: 200px;
    position: absolute;
    border-radius: 50%;
}
.shape:first-child{
    background: linear-gradient(
        #1845ad,
        #23a2f6
    );
    left: -80px;
    top: -80px;
}
.shape:last-child{
    background: linear-gradient(
        to right,
        #ff512f,
        #f09819
    );
    right: -30px;
    bottom: -80px;
}
.blur{
    height: 500px;
    width: 550px;
    background-color: rgba(255,255,255,0.13);
    position: relative;
    transform: translate(-50%,10%);
    top: 50%;
    left: 50%;
    border-radius: 10px;
    backdrop-filter: blur(10px);
    border: 2px solid rgba(255,255,255,0.1);
    box-shadow: 0 0 40px rgba(8,7,16,0.6);
    padding: 50px 35px;
}
.blur *{
    font-family: 'Poppins',sans-serif;
    color: #ffffff;
    letter-spacing: 0.5px;
    outline: none;
    border: none;
}
.blur h3{
    font-size: 32px;
    font-weight: 500;
    line-height: 42px;
    text-align: center;
}

label{
    display: block;
    margin-top: 5px;
    font-size: 16px;
    font-weight: 500;
}
input{
    display: block;
    height: 50px;
    width: 100%;
    background-color: rgba(255,255,255,0.07);
    border-radius: 3px;
    padding: 0 10px;
    margin-top: 8px;
    font-size: 14px;
    font-weight: 300;
}
select{
    display: block;
    height: 50px;
    width: 100%;
    background-color: rgba(255,255,255,0.07);
    border-radius: 3px;
    padding: 0 10px;
    margin-top: 8px;
    font-size: 14px;
    font-weight: 300;
    
}
option{
    background-color: black;
}
::placeholder{
    color: #e5e5e5;
}
dd{
    text-align:center;
}


</style>

<div>
    <form class="blur">
        <h3>Details For Transport @Model.Id</h3>
        <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StatusTransport)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StatusTransport)
        </dd>
        <hr />
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SentDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SentDate)
        </dd>
        <hr />
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ArrivalDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ArrivalDate)
        </dd>
        <hr />
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DriverModel.LastName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DriverModel.LastName)
        </dd>
        <hr />
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LocationModel.Adress)
        </dt>

        <dd class = "col-sm-10" id="Address">
            @Html.DisplayFor(model => model.LocationModel.Adress)
        </dd>
    </dl>
        <a asp-controller="TransportationSchedules" asp-action="Index">Back to Schedules</a>

    </form>
    
     
    <div id="map_populate" style="width:400px; height:500px; border: 5px solid #5E5454; transform:translate(-30%,-90%); position:absolute;">  
    </div>  
   
    
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBJPsJYQbyXRHr6VWd1UdW3Uq-srnWtjMI&callback=initMap" type="text/javascript"></script>  
    <script>  
        var mapcode;  
        var diag;  
        function initialize() {  
            mapcode = new google.maps.Geocoder();  
            var lnt = new google.maps.LatLng(0, 0);  
            var diagChoice = {  
                zoom: 17,  
                center: lnt,  
                diagId: google.maps.MapTypeId.ROADMAP  
            }  
            diag = new google.maps.Map(document.getElementById('map_populate'), diagChoice);
            getmap();
        }  
        function getmap() {  
            var completeaddress = document.getElementById('Address').textContent;  
            mapcode.geocode({ 'address': completeaddress }, function (results, status) {  
                if (status == google.maps.GeocoderStatus.OK) {  
                    diag.setCenter(results[0].geometry.location);  
                    var hint = new google.maps.Marker({
                        position: results[0].geometry.location  
                    });
                    hint.setMap(diag);
                } else {  
                    alert('Location Not Tracked. ' + status);  
                }  
            });  

        }  
        google.maps.event.addDomListener(window, 'load', initialize);  
    </script>
</div>
